    "module": "system",
    "moduleResolution": "node",
    "baseUrl": "hadiths/static/hadiths/js",
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "angular",
      "angular-resource",
      "angular-route",
      "d3",
      "jquery",
      "lodash",
      "moment",
      "systemjs",
      "toastr"
